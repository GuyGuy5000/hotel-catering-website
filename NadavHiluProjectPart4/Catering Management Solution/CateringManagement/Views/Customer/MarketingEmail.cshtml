
@{
    ViewData["Title"] = "Marketing Email";
}

<h1>Marketing Email</h1>

<h2>Marketing email for customers</h2>

<hr />
<form asp-action="MarketingEmail">
    <div class="row">
        <div class="col-md-8">
            <div class="text-danger">@ViewData["Message"]</div>
            <hr />
            <input type="hidden" name="selectedOptions" value="@ViewData["selectedOptions"]" />
            <div class="form-group">
                <label for="Subject" class="control-label">Email Subject</label>
                <input type="text" id="Subject" name="Subject" class="form-control" />
            </div>
            <div class="form-group">
                <label for="emailContent" class="control-label">Message Content</label>
                <textarea id="emailContent" name="emailContent" rows="5" cols="40" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label"> Customers selected</label> <button type="button" id="btnRight" class="btn btn-danger btn-sm">
                            <strong>-</strong>
                        </button>
                        @Html.ListBox("selectedOptions", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Available Customers</label> <button type="button" id="btnLeft" class="btn btn-success btn-sm">
                            <strong>+</strong>
                        </button>
                        @Html.ListBox("availOptions", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
            <div class="form-group">
                <input id="btnSubmit" type="submit" value="Send" class="btn btn-primary" />
            </div>
        </div>
</form>
<div>
    <partial name="_BackToList" />
</div>

@section Scripts {
    <script src="~/js/multiselect.js"></script>
}